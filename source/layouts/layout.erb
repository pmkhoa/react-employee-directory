<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "React - Employee Directory" %></title>
    <link href="ratchet/css/ratchet.css" rel="stylesheet" type="text/css">
    <%= stylesheet_link_tag "normalize", "all" %>
  </head>

  <body class="<%= page_classes %>">
    <%= yield %>

    <%= javascript_include_tag "bower_components/react/react" %>
    <%= javascript_include_tag "bower_components/react/JSXTransformer" %>
    <script src="http://code.jquery.com/jquery-2.1.1.min.js"></script>
    <%= javascript_include_tag "data" %>
    <%= javascript_include_tag "router" %>
    <script type="text/jsx" src="javascripts/all.js"></script>

  </body>
</html>
